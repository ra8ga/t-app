{
  "name": "@my-better-t-app/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "export LOCAL_DB_PATH=\"$(find ../apps/server/.wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print0 | xargs -0 ls -t | head -1)\" && PORT=\"${PORT:-4984}\" drizzle-kit studio --port=$PORT",
    "db:studio:remote": "PORT=\"${PORT:-4985}\" drizzle-kit studio --port=$PORT",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "tsdown": "catalog:",
    "@my-better-t-app/config": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "@libsql/client": "^0.14.0",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
