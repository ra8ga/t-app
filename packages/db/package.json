{
  "name": "@my-better-t-app/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:push": "bun ../../scripts/db-utils.ts drizzle-push-local",
    "db:push:local": "bun ../../scripts/db-utils.ts drizzle-push-local",
    "db:push:remote": "bun ../../scripts/db-utils.ts drizzle-push-remote",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "bun ../../scripts/db-utils.ts drizzle-studio-local",
    "db:studio:remote": "bun ../../scripts/db-utils.ts drizzle-studio-remote",
    "db:generate": "bun ../../scripts/db-utils.ts drizzle-generate-local",
    "db:generate:local": "bun ../../scripts/db-utils.ts drizzle-generate-local",
    "db:generate:remote": "bun ../../scripts/db-utils.ts drizzle-generate-remote",
    "db:migrate": "bun ../../scripts/db-utils.ts drizzle-migrate-local",
    "db:migrate:local": "bun ../../scripts/db-utils.ts drizzle-migrate-local",
    "db:migrate:remote": "bun ../../scripts/db-utils.ts drizzle-migrate-remote",
    "db:studio:local:file": "bun ../../scripts/db-utils.ts drizzle-studio-local-file",
    "db:migrate:local:file": "bun ../../scripts/db-utils.ts drizzle-migrate-local-file",
    "db:clean-migrate:local:file": "bun ../../scripts/db-utils.ts drizzle-clean-migrate-local-file",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@my-better-t-app/config": "workspace:*",
    "drizzle-kit": "catalog:",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=23",
    "bun": ">=1.3.0"
  },
  "dependencies": {
    "drizzle-orm": "catalog:",
    "@libsql/client": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
